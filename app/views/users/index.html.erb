<% content_for :title, "Users" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Users</h1>
    <%= link_to "New user", new_user_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="users" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    <% if @users.any? %>
      <% @users.each do |user| %>
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 flex flex-col items-center p-6 hover:shadow-xl transition-all h-full">
            <div class="flex-grow flex flex-col items-center w-full space-y-4 mb-4">
                 <div class="w-24 h-24 rounded-full bg-gray-50 flex items-center justify-center text-4xl font-black text-gray-800 border-2 border-[#FFD100]">
                    <%= user.name.split.map(&:first).join.upcase %>
                 </div>
                 <div class="text-center">
                    <div class="text-xl font-bold text-gray-800"><%= user.name %></div>
                    <% if user.respond_to?(:role) && user.role.present? %>
                        <div class="inline-block px-3 py-1 mt-2 bg-gray-100 text-xs font-bold text-gray-500 rounded-full uppercase tracking-wider">
                           <%= user.role.humanize %>
                        </div>
                    <% end %>
                 </div>
            </div>

            <div class="w-full grid grid-cols-2 gap-3 mt-auto border-t pt-4">
               <%= link_to edit_user_path(user), class: "w-full text-center rounded-lg py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-bold transition flex items-center justify-center gap-2 group" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 group-hover:text-blue-600 transition">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                  </svg>
                  Edit
               <% end %>
               
               <%= button_to user, method: :delete, class: "w-full flex items-center justify-center gap-2 rounded-lg py-2 bg-red-50 hover:bg-red-100 text-red-600 font-bold transition", form_class: "w-full", data: { turbo_confirm: "Are you sure?" } do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                  </svg>
                  Delete
               <% end %>
            </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-span-full flex flex-col items-center justify-center py-20 text-gray-400">
         <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 mb-4 opacity-50">
           <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
         </svg>
         <p class="text-xl font-medium">No users found.</p>
         <p class="text-sm">Create a new user to get started.</p>
      </div>
    <% end %>
  </div>
</div>
