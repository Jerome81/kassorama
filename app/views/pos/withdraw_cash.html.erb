<div class="h-[calc(100vh-100px)] flex flex-col items-center justify-center p-6">
  <div class="bg-white shadow-lg rounded-2xl p-8 border border-gray-100 text-center w-[400px] max-w-full">
    <h1 class="text-3xl font-bold text-[#2C2C2C] mb-4">Bargeld entnehmen</h1>
    <p class="text-gray-500 mb-8">
      Aktueller Kassenstand: 
      <span class="font-bold text-[#2C2C2C]"><%= number_to_currency(@cash_register.amount || 0, unit: 'CHF') %></span>
    </p>

    <%= form_with url: process_withdrawal_pos_path(@cash_register), method: :post, class: "space-y-6" do |form| %>
      
      <% if flash[:alert] %>
        <div class="bg-red-50 text-red-500 p-3 rounded text-sm mb-4">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div class="text-left">
        <label class="block text-sm font-medium text-gray-700 mb-1">Betrag</label>
        <div class="relative rounded-md shadow-sm">
           <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
             <span class="text-gray-500 sm:text-lg">CHF</span>
           </div>
           <%= form.number_field :amount, step: 0.01, class: "block w-full rounded-md border-gray-300 pl-12 focus:border-[#FFD100] focus:ring-[#FFD100] text-xl py-3", required: true %>
        </div>
      </div>

      <div class="text-left">
        <label class="block text-sm font-medium text-gray-700 mb-2">Vorlagen</label>
        <div class="flex flex-wrap gap-2 mb-4">
           <% ["AbschÃ¶pfen", "Support", "Handelswaren 2.6", "Handelswaren 8.1", "Sonstiges 8.1"].each do |label| %>
              <button type="button" onclick="document.getElementById('reason').value = '<%= label %>'" class="bg-gray-100 hover:bg-gray-200 text-gray-700 text-xs py-2 px-3 rounded text-center border border-gray-200">
                <%= label %>
              </button>
           <% end %>
        </div>

        <label class="block text-sm font-medium text-gray-700 mb-1">Grund</label>
        <%= form.text_field :reason, id: "reason", class: "block w-full rounded-md border-gray-300 focus:border-[#FFD100] focus:ring-[#FFD100] p-3 shadow-sm", placeholder: "z.B. Bankeinzahlung", required: true %>
      </div>

      <div class="grid grid-cols-2 gap-4 mt-8">
        <%= link_to "Abbrechen", pos_path(@cash_register), class: "block w-full rounded-lg bg-gray-200 px-4 py-3 text-center font-bold text-gray-700 hover:bg-gray-300" %>
        <%= form.submit "Entnehmen", class: "block w-full rounded-lg bg-red-100 text-red-700 hover:bg-red-200 px-4 py-3 text-center font-bold cursor-pointer transition" %>
      </div>
    <% end %>
  </div>
</div>
