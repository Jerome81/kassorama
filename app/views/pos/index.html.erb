<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl mb-6">Open a Cash Register</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% @cash_registers.each do |register| %>
      <%= link_to pos_path(register), class: "block p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-[#FFD100] hover:text-[#2C2C2C] transition duration-300" do %>
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= register.name %></h5>
        <p class="font-normal text-gray-700 dark:text-gray-400">Status: <%= register.status %></p>
      <% end %>
    <% end %>
  </div>
</div>
