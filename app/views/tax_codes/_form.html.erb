<%= form_with(model: tax_code, class: "contents") do |form| %>
  <% if tax_code.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(tax_code.errors.count, "error") %> prohibited this tax_code from being saved:</h2>

      <ul class="list-disc ml-6">
        <% tax_code.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :rate %>
    <%= form.text_field :rate, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": tax_code.errors[:rate].none?, "border-red-400 focus:outline-red-600": tax_code.errors[:rate].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
