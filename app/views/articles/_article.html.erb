<div id="<%= dom_id article %>" class="max-w-xl text-left">
  <!-- Main Card -->
  <div class="bg-white rounded-xl shadow-lg p-6 mb-8 border-l-4 border-[#FFD100]">
      <div class="flex justify-between items-start mb-2">
         <h1 class="text-3xl font-bold text-gray-800"><%= article.name %></h1>
         <div class="flex space-x-2">
            <%= link_to edit_article_path(article), title: "Edit", class: "text-gray-400 hover:text-[#FFD100] transition p-1" do %>
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                 <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
               </svg>
            <% end %>
            <%= button_to article, method: :delete, title: "Delete", class: "text-gray-400 hover:text-red-500 transition p-1", form: {style: 'display:inline-block;', data: { turbo_confirm: 'Wirklich löschen?' }} do %>
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                 <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
               </svg>
            <% end %>
         </div>
      </div>
      
      <% if article.supplier %>
        <p class="text-gray-500 text-sm mb-4 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 0 1-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 0 0-3.213-9.193 2.056 2.056 0 0 0-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 0 0-10.026 0 1.106 1.106 0 0 0-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
            </svg>
            <%= article.supplier.name %>
        </p>
      <% end %>

      <div class="flex justify-between items-end mt-6">
          <div>
             <span class="inline-block px-3 py-1 rounded-full text-xs font-semibold uppercase tracking-wider <%= article.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                <%= article.status %>
             </span>
             <span class="text-gray-500 text-xs ml-2">SKU: <%= article.sku %></span>
          </div>
          <div class="text-right">
             <div class="text-3xl font-bold text-[#2C2C2C]"><%= number_to_currency(article.price) %></div>
             <div class="text-xs text-gray-400">Preis</div>
          </div>
      </div>
  </div>

  <% if action_name == "show" %>
      <!-- Sales Stats -->
      <% 
         sales_30d = article.order_items.joins(:order).where(orders: { status: 'completed', updated_at: 30.days.ago..Time.current }).sum(:quantity)
      %>
      <div class="bg-blue-50 rounded-lg p-5 mb-8 border border-blue-100">
          <% if sales_30d > 0 %>
          <h3 class="text-xs font-bold text-blue-500 uppercase tracking-wider mb-2">Verkäufe (Letzte 30 Tage)</h3>
          
          <div class="flex items-baseline">
               <span class="text-4xl font-extrabold text-blue-900 mr-2"><%= sales_30d %></span>
               <span class="text-blue-700">Stück</span>
          </div>
          <% end %>
          <% if sales_30d == 0 %>
             <% 
                last_item = article.order_items.joins(:order).where(orders: { status: 'completed' }).order('orders.updated_at DESC').first
                last_sale = last_item&.order&.updated_at
             %>
             <div class="mt-2 text-sm text-blue-800 font-medium">
                <% if last_sale %>
                   Zuletzt verkauft: <%= last_sale.strftime("%d.%m.%Y") %>
                <% else %>
                   Zuletzt verkauft: Nie
                <% end %>
             </div>
          <% end %>
      </div>

      <!-- Locations -->
      <% stocks = article.stocks.includes(:location).where('quantity >= 1') %>
      <div>
           <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-4">Lagerorte im Bestand</h3>
           <% if stocks.any? %>
              <div class="grid grid-cols-1 gap-3">
                 <% stocks.each do |stock| %>
                    <div class="flex justify-between items-center bg-white border border-gray-200 p-4 rounded-lg">
                        <div class="font-medium text-gray-800 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400 mr-2">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                            </svg>
                            <%= stock.location.name %>
                        </div>
                        <div class="font-bold text-gray-900 bg-gray-100 px-3 py-1 rounded-md">
                            <%= stock.quantity %> Stk
                        </div>
                    </div>
                 <% end %>
              </div>
           <% else %>
              <p class="text-gray-400 italic text-sm">Kein Bestand an Lagerorten.</p>
           <% end %>
      </div>
  <% end %>

  <% if action_name != "show" %>
    <div class="mt-4 flex justify-end">
       <%= link_to "Details anzeigen →", article, class: "text-sm text-gray-500 hover:text-[#FFD100] font-medium transition" %>
    </div>
  <% end %>
</div>
